###################################################################
# Solana Self Sniper Configuration                                 #
###################################################################

# RPC endpoint (mainnet-beta or devnet)
RPC_URL=

# Base58 private key of the creator wallet (DO NOT COMMIT REAL KEY)
PRIVATE_KEY=

# Jito block engine gRPC endpoint
JITO_ENDPOINT=

# Mint address of the SPL or Token-2022 token (leave blank to mint new in devnet script)
MINT=

# Initial liquidity amounts
INITIAL_BASE_AMOUNT=1000       # USDC amount to seed
INITIAL_TOKEN_AMOUNT=1000000   # Token amount to seed

# Number of self-buy swap transactions in the initial bundle
NUM_SELF_BUY_SWAPS=3

# Comma-separated list of creator-controlled wallets to receive the self-buys
SELF_BUY_WALLETS=

# Sniper threshold percentage of total supply that triggers mirror buy
SNIPER_THRESHOLD_PCT=10

# Development mode flag (true=devnet, false=mainnet-beta)
DEV_MODE=true

# Optional: Discord webhook URL for alerts
DISCORD_WEBHOOK_URL= 